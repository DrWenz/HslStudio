<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="using:HslStudio.HslControls.Feed"
		xmlns:localConverter="using:HslStudio.HMIControls.Converter"
		>
		>
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
			<local:Cylinder />
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->

	<Style Selector="local|Cylinder">
		<!-- Set Defaults -->
		<Setter Property="Foreground" Value="Gray" />
		<Setter Property="BorderBrush" Value="White" />
		<Setter Property="Width" Value="20" />
		<Setter Property="Height" Value="20" />
		<Setter Property="Template">
			<ControlTemplate TargetType="controls:Cylinder">
				<Ellipse Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                         Fill="{TemplateBinding Foreground}" StrokeThickness="1" Stroke="{TemplateBinding BorderBrush}" />
			</ControlTemplate>
		</Setter>
	</Style>

	<Style Selector="local|Cylinder:alarm">

		<Setter Property="Foreground" Value="Orange" />
	</Style>
</Styles>
